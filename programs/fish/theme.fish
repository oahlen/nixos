# Syntax Highlighting
set -g fish_color_autosuggestion brblack
set -g fish_color_cancel red --bold
set -g fish_color_command blue --bold
set -g fish_color_comment brblack
set -g fish_color_end purple --bold
set -g fish_color_error red
set -g fish_color_escape yellow --bold
set -g fish_color_history_current --bold
set -g fish_color_keyword purple
set -g fish_color_normal normal
set -g fish_color_operator purple
set -g fish_color_option white --bold
set -g fish_color_param white
set -g fish_color_quote green
set -g fish_color_redirection purple --bold
set -g fish_color_search_match --background Black
set -g fish_color_selection --background Black
set -g fish_color_status red
set -g fish_color_valid_path --underline

# Prompt
set -g fish_color_cwd blue --bold
set -g fish_color_cwd_root red --bold
set -g fish_color_host cyan --bold
set -g fish_color_host_remote green --bold
set -g fish_color_user yellow --bold

# Completion Pager
set -g fish_pager_color_completion normal
set -g fish_pager_color_description green
set -g fish_pager_color_prefix blue --bold --underline
set -g fish_pager_color_progress black --background blue
set -g fish_pager_color_selected_background --background black

# Git
set -g __fish_git_prompt_color purple --bold

# Custom
set -g fish_color_prefix green --bold
