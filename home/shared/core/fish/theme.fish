# Syntax Highlighting
set -g fish_color_autosuggestion brblack
set -g fish_color_cancel red --bold
set -g fish_color_command a3adcb --bold
set -g fish_color_comment brblack
set -g fish_color_end blue --bold
set -g fish_color_error red
set -g fish_color_escape yellow --bold
set -g fish_color_history_current --bold
set -g fish_color_keyword blue
set -g fish_color_normal normal
set -g fish_color_operator blue
set -g fish_color_option white
set -g fish_color_param white --bold
set -g fish_color_quote cyan
set -g fish_color_redirection purple --bold
set -g fish_color_search_match --background 3d425b
set -g fish_color_selection --background 3d425b
set -g fish_color_status red
set -g fish_color_valid_path --underline

# Prompt
set -g fish_color_cwd blue --bold
set -g fish_color_cwd_root red --bold
set -g fish_color_host cyan --bold
set -g fish_color_host_remote yellow --bold
set -g fish_color_user blue --bold

# Completion Pager
set -g fish_pager_color_completion normal
set -g fish_pager_color_description cyan
set -g fish_pager_color_prefix yellow --bold --underline
set -g fish_pager_color_progress black --background blue
set -g fish_pager_color_selected_background --background 3d425b

# Git
set -g __fish_git_prompt_color purple --bold

# Custom
set -g fish_color_prefix green --bold
set -g fish_color_special green --bold
